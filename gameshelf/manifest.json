{
  "name": "Game Shelf",
  "short_name": "Game Shelf",
  "description": "Track your daily puzzle games",
  "start_url": "/app/index.html",
  "display": "standalone",
  "display_override": ["standalone", "minimal-ui"],
  "background_color": "#0a0a0f",
  "theme_color": "#667eea",
  "orientation": "portrait-primary",
  "scope": "/app/",
  "lang": "en-US",
  
  "icons": [
    {
      "src": "icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-maskable-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "icons/icon-maskable-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Log Game",
      "short_name": "Log",
      "description": "Quickly log today's game results",
      "url": "/app/index.html?action=log"
    },
    {
      "name": "Share Results",
      "short_name": "Share",
      "description": "Share your daily results",
      "url": "/app/index.html?tab=share"
    },
    {
      "name": "Play Wordle",
      "short_name": "Wordle",
      "description": "Launch Wordle",
      "url": "/app/index.html?game=wordle"
    }
  ],
  
  "share_target": {
    "action": "/app/index.html?share-target=true",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "launch_handler": {
    "client_mode": ["focus-existing", "auto"]
  }
}
